{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "lib",
    "sourceMap": false,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/__tests__"]
}
