{
  "compilerOptions": {
    "types": ["node", "bluebird", "bluebird-global", "jest"],
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "lib",
    "sourceMap": false,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./**/*.test.ts"]
}
